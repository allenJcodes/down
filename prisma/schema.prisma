generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LeaderboardEntry {
  id               String   @id @default(cuid())
  playerName       String
  score            Int
  time             Int      // milliseconds
  healthRemaining  Int
  timestamp        DateTime @default(now())

  @@index([score])
  @@index([time])
  @@map("leaderboard_entries")
}
